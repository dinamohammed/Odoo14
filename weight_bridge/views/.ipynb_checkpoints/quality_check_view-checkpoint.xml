<odoo>
  <data>
      <record id="quality_check_view_form_inherit33" model="ir.ui.view">
            <field name="name">	quality.check.view.form.inheritt33</field>
            <field name="model">quality.check</field>
            <field name="inherit_id" ref="quality_control.quality_check_view_form"/>
            <field name="mode">primary</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="weightbridgeline_id" required="1"/>
                </xpath>
                 <xpath expr="//page[@name='notes']" position="inside">
                     <group>
                         <group name= "locations" string="Locations">
                             <field name="pass_location_id"/>
                             <field name="fail_location_id"/>
                             </group>
                     </group>
                </xpath>
            </field>
        </record>
  </data>
</odoo>