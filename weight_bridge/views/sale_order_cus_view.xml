<odoo>
  <data>
      <record id="sale_order_view_form_inherit33" model="ir.ui.view">
            <field name="name">sale.order.view.form.inheritt33</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//page[@name='other_information']" position="inside">
                     <group>
                         <group name= "transfers" string="Transfers">
                             <field name="period_month"/>
                             <field name="no_of_transfers" attrs="{'invisible': [('period_month', '=', False)]}"/>
                         </group>
                     </group>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="after">
                    <button name="multi_transfers" string="Multi Transfers" type="object" 
                            attrs="{'invisible': [('state', 'not in', ['sale'])]}"/>
                </xpath>
            </field>
        </record>
      
      <record id="purchase_order_form_inherit33" model="ir.ui.view">
            <field name="name">purchase.order.form.inheritt33</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//page[@name='purchase_delivery_invoice']" position="inside">
                     <group>
                         <group name= "transfers" string="Transfers">
                             <field name="period_month"/>
                             <field name="no_of_transfers" attrs="{'invisible': [('period_month', '=', False)]}"/>
                         </group>
                     </group>
                </xpath>
                <xpath expr="//button[@name='button_confirm']" position="after">
                    <button name="multi_transfers" string="Multi Transfers" type="object" 
                            attrs="{'invisible': [('state', 'not in', ['purchase'])]}"/>
                </xpath>
            </field>
        </record>
  </data>
</odoo>