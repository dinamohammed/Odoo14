<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="weight_bridge_create_line_view_form" model="ir.ui.view">
        <field name="name">weight.bridge.create.line.wizard.form</field>
        <field name="model">weight.bridge.create.line</field>
        <field name="arch" type="xml">
            <form string="Save time and weights">
                <group>
                    <group>
                        <field name="order_id"/>
                        <field name="product_id"/>
                        <field name="driver_id"/>
                        <label for="time_spent"/>
                        <div class="o_row" >
                            <field name="time_spent" widget="float_time" required="True"/>
                            hours
                        </div>
                        <label for="difference"/>
                        <div class="o_row" >
                            <field name="difference" required="True"/>
                            Kilograms
                        </div>
                        <field name="description" widget="text" required="True"/>
                    </group>
                </group>
                <footer>
                    <button string="Save" type="object" name="save_weights" class="btn btn-primary"/>
                    <button string="Cancel" special="cancel" type="object" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
