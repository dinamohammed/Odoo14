<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record model="ir.module.category" id="module_category_weight_bridge">
            <field name="name">WeightBridge</field>
            <field name="description">Helps you manage WeightBridge users.</field>
            <field name="sequence">9</field>
        </record>

        <record id="group_weight_bridge_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="weight_bridge.module_category_weight_bridge"/>
        </record>
        
        <record id="group_weight_bridge_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="weight_bridge.module_category_weight_bridge"/>
            <field name="implied_ids" eval="[(4, ref('group_weight_bridge_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>